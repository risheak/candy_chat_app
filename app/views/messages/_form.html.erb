<%= turbo_frame_tag "#{dom_id(profile)}_message_form" do %>
  <%= form_with(url: send_message_profile_chats_path(profile_id: @profile.id)) do |form| %>
    <%= form.hidden_field :profile_id, value: @profile.id %>
    <%= form.text_field :body, placeholder: 'Type your message...' %>
    <%= form.submit 'Send' %>
  <% end %>
<% end %>
